{% extends 'base.html.twig' %}

{% block title %}League{% endblock %}

{% block body %}
    <h1>League</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ league.name }}</td>
            </tr>
            <tr>
                <th>Website</th>
                <td><a target="_new" href="{{ league.website }}">Lien vers le site</a></td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ league.address }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ league.createdAt ? league.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ league.updatedAt ? league.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-primary" href="{{ path('league_index') }}">Liste des ligues</a>

    {% if (is_granted("ROLE_ADMIN") or league.getResponsible == app.user) %}
        <a class="btn btn-outline-secondary" href="{{ path('league_edit', {'id': league.id}) }}">Modifier</a>
        {{ include('league/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
