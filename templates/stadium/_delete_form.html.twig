<form method="post" class="mt-1" action="{{ path('stadium_delete', {'id': stadium.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ stadium.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
